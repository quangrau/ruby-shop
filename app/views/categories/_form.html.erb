<%= form_for(@category, remote: true, :html => {:class => 'form-inline'}) do |f| %>
<div class="form-group">
	<label for="name">Category Name:</label>
	<%= f.text_field :name, class: "form-control" %>
</div>
<%= f.submit class: "btn btn-success" %>
<%= image_tag "ajax-loader.gif", :alt => 'Waiting', class: 'hide', id: 'loading-icon' %>
<% end %>